<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemview_checkin_textview"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Check In" />
            <TextView
                android:id="@+id/itemview_checkout_textview"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Check Out" />
            <TextView
                android:id="@+id/itemview_reason_textview"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Reason" />
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemview_am_textview"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:textColor="#00af65"
                android:text="00:00 AM" />
            <TextView
                android:id="@+id/itemview_pm_textview"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:textColor="#ef0000"
                android:text="00:00 PM" />
            <TextView
                android:id="@+id/itemview_checkin_time_textview"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Check In" />
        </LinearLayout>

        <!-- Third Row for Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemview_date_textview"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Date" />
            <TextView
                android:id="@+id/itemview_date_value_textview"
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:text="Date" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
