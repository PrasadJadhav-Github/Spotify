<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemview_checkin_textview"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Check In" />

                <TextView
                    android:id="@+id/itemview_checkout_textview"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Check Out" />

                <TextView
                    android:id="@+id/itemview_reason_textview"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Reason" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemview_checkin_Am_textview"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="17dp"
                    android:text="00:00 AM"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="#00af65" />

                <TextView
                    android:id="@+id/itemview_checkout_PM_textview"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="17dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="00:00 PM"
                    android:textColor="#ef0000" />

                <TextView
                    android:id="@+id/itemview_Status"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Check In" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemview_checkin_Date_textview"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="11dp"
                    android:text="Date" />

                <TextView
                    android:id="@+id/itemview_checkout_Date_textview"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="11dp"
                    android:text="Date" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
